@model CommentFormViewModel
@{
    ViewBag.Title = "Add Comment";
}

@{
    Layout = null;
}

<div class="row">
    <div class="col-sm-10">
        <form asp-controller="Comment" asp-action="Add" method="post">
            <input asp-for="ProjectId" style="display: none" value ="@Model.ProjectId"/>
            <input asp-for="AuthorId" style="display: none" value="@Model.AuthorId" />
            <div class="mb-3">
                <label asp-for="Content">Comment Content</label>
                <textarea asp-for="Content" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <button formmethod="post" class="btn btn-sm btn-primary mb-3" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}