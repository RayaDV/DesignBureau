@model ProjectServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.MainImageUrl" alt="Project Main Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Country: <b>@Model.Country</b></h6>
            <h6>Town: <b>@Model.Town</b></h6>
            <h6>Year of design: <b>@Model.YearDesigned</b></h6>
            <br />
            <a asp-controller="Project" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="Project" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning">Edit</a>
                <a asp-controller="Project" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">Delete</a>
                <p></p>

                <a asp-controller="Project" asp-action="Comment" asp-route-id="@Model.Id"
                   class="btn btn-primary">Comment</a>
                <p></p>
            }
        </div>
    </div>
</div>
