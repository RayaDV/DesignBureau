@model ProjectGalleryServiceModel
@inject IDesignerService designerService

@{
    ViewBag.Title = "Project Gallery";
    var gallery = Model.Gallery.ToList();
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h3 class="text-center"><u>@Model.Title</u></h3>
<p></p>

@if (!Model.Gallery.Any())
{
    <div class="mt-4 p-5 bg-light">
        <p class="lead">
            There are no images in the system for current project available yet!
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User.Identity.IsAuthenticated)
            {
                <p class="lead">You can add some!</p>
            }
        </p>
    </div>
}


<div id="carouselExampleIndicators" class="carousel slide">
    <div class="carousel-indicators">
        @for (int i = 0; i < gallery.Count(); i++)
        {
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : string.Empty)" aria-current="true" aria-label="Slide @i"></button>
        }
    </div>
    <div class="carousel-inner">
        @for (int i = 0; i < gallery.Count(); i++)
        {
            var image = gallery[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:680px" src="@image.ImageUrl" alt="">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<form method="post" class="m-4 text-center">
    @if (await designerService.ExistsByUserIdAsync(User.Id()) || User.IsAdmin())
    {
        <div class="btn btn-primary btn-lg text-center"
             role="button" onclick="document.getElementById('file').click(); return false;">
            Add Images
        </div>
        /*<input asp-for="ProjectId" id="projectId" style="visibility: hidden;" value="ProjectId" />
        <input asp-for="Title" id="title" style="visibility: hidden;" value="Title" />
        <input asp-for="Gallery" id="gallery" style="visibility: hidden;" value="Gallery" /> */
        <input type="file" name="file" id="file" accept="image/*" style="visibility: hidden;" onchange="document.getElementById('submit').click(); return false;" />
        <button asp-area="" asp-controller="Project" asp-action="UploadImages" class="btn btn-primary btn-lg text-center type="submit" id="submit">Submit</button>
    }
</form>


